{
	"python.defaultInterpreterPath": ".\\.venv\\Scripts\\python.exe",

	"python.languageServer": "Pylance",

	"files.exclude": {
		"**/.git": true, // git-repo
		"**/.idea": true, // intellij
		"**/__pycache__": true, // python

		"**/.venv/": true, // virtualenv

		// builds
		"**/.buildozer": true,
		"**/bin": true,
		"**/build": true,
		"**/dist": true,

		// ruff && uv
		"**/.ruff_cache": true,
		"**/.python-version": true,
		"**/uv.lock": true
	},
	"cSpell.words": [
		"buildozer",
		"jsonschema",
		"kirapp",
		"Kirix",
		"kirixcode",
		"kivy",
		"pygments"
	]
}
